<!-- bind -->
<view class="container-home">
    <text>绑定用户</text>
    <view class='content'>
        <image class="user-avatar" src="/image/login/login.jpg"></image>
        <input placeholder="账户" class='user-id' bindinput='getUsername' />
        <input placeholder="密码" class='password' bindinput='getPassword' password='true' />
        <button class='back' bindtap='backClick' hover-class='bakc-hover'>返回上一页</button>
        <button class='login' bindtap='loginClick' hover-class='login-hover'>立即绑定</button>
    </view>

    <view class='triangle1'></view>
    <view class='triangle2'></view>
    <view class='triangle3'></view>
    <view class='triangle4'></view>
    <view class='triangle5'></view>
    <view class='triangle6'></view>
</view>
